{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "module": "preserve",
    "target": "es2016",
    "types": ["vitest/globals", "@testing-library/jest-dom", "node"],
    "moduleResolution": "bundler",
    "isolatedModules": true
  },
  "files": ["src/test-setup.ts"],
