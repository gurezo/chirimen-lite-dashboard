  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "typeRoots": ["node_modules/@types", "@types/jest"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["apps/dashboard/src/app/*"],
      "@chirimen-lite-dashboard/ui": ["libs/ui/src/index.ts"],
      "@shared/*": ["apps/dashboard/src/app/shared/*"]
    }
  }
}
